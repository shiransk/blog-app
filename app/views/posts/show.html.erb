<h1> My Post</h1>
<% if @post %>
<ul>
  <li>post name: <%= @post.name %></li>
  <li>post auoter: <%= @post.user.name %></li>
  <li>post text: <%= @post.post_text %></li>
  <% if @post.user.id == current_user.id %>
    <li><%= link_to "Delete", "/posts/#{@post.id}", method: :delete %></li>
    <li><%= link_to "Edit", "/posts/#{@post.id}/edit" %></li>
  <% end  %>
<% end  %>
</ul>