<% if @post.user.id == current_user.id %>
  <h1>Update Your post!</h1>
  <%= form_tag "/posts/#{@post.id}", method: :patch do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @post.name, class: 'form-control' %>
  </div>

  <div>
    <%= label_tag :post_text %>
    <%= text_field_tag :post_text, @post.post_text, class: 'form-control' %>
  </div>

  <div>
  <%= hidden_field_tag :user_id, current_user.id %>
  </div>

  <%= submit_tag %>

  <% end %>
<% end  %>